<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="Calculator">

    <TextView
        android:id="@+id/txtFirst"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:gravity="bottom|right"
        android:paddingRight="10dp"
        android:textColor="#0E0E0E"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/txtSecond"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSecond"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="3dp"
        android:background="#FFFFFF"
        android:gravity="bottom|right"
        android:paddingRight="10dp"
        android:textColor="#0E0E0E"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/txtThird"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtFirst" />

    <TextView
        android:id="@+id/txtThird"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:gravity="bottom|right"
        android:paddingRight="10dp"
        android:text=""
        android:textColor="#0E0E0E"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/key"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSecond" />

    <TableLayout
        android:id="@+id/key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/GEEKTECH"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtThird">

        <TableRow>

            <Button
                android:id="@+id/first"

                android:text="1"
                android:textSize="50dp" />

            <Button
                android:id="@+id/second"
                android:textSize="50dp"
                android:text="2" />

            <Button
                android:text="3"
                android:textSize="50dp" />

            <Button
                android:text="*"
                android:textSize="50dp" />


        </TableRow>

        <TableRow>

            <Button
                android:text="4"
                android:textSize="50dp" />

            <Button
                android:text="5"
                android:textSize="50dp" />

            <Button
                android:text="6"
                android:textSize="50dp" />

            <Button
                android:text="/"
                android:textSize="50dp" />


        </TableRow>


        <TableRow>

            <Button
                android:text="7"
                android:textSize="50dp" />

            <Button
                android:text="8"
                android:textSize="50dp" />

            <Button
                android:text="9"
                android:textSize="50dp" />

            <Button
                android:text="-"
                android:textSize="50dp" />


        </TableRow>


        <TableRow>

            <Button
                android:text="0"
                android:textSize="50dp" />

            <Button
                android:text=","
                android:textSize="50dp" />


            <Button
                android:id="@+id/plus"

                android:text="+"
                android:textSize="50dp" />

            <Button
                android:id="@+id/equally"
                android:text="="
                android:textSize="50dp" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/GEEKTECH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/GEEKTECH"
        android:text="GEEKTECH"
        android:textSize="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/key" />


</androidx.constraintlayout.widget.ConstraintLayout>